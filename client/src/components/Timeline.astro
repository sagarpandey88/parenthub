---

<section class="py-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <span class="inline-block text-sm font-semibold text-primary-600 dark:text-primary-400 uppercase tracking-wider mb-2">Comprehensive Guide</span>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Your Parenting Timeline</h2>
      <p class="text-lg text-dark-600 dark:text-dark-300">
        Explore our interactive timeline to navigate through each stage of your parenting journey, from conception to your child's first adventures.
      </p>
    </div>
    
    <div class="timeline-container relative">
      <!-- Timeline center line -->
      <div class="timeline-line"></div>
      
      <!-- Timeline items -->
      {timelineItems.map((item, index) => (
        <div id={item.id} class={`timeline-item ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
          <div class={`timeline-content ${index % 2 === 0 ? 'md:ml-12 md:pl-0 md:pr-12 md:text-right' : 'md:mr-12 md:pr-0 md:pl-12 md:text-left'}`}> 
            <div class="flex items-center gap-2 mb-1">
              <span class="text-2xl" aria-hidden="true">{item.icon}</span>
              <span class="timeline-date">{item.date}</span>
            </div>
            <h3 class="timeline-title">{item.title}</h3>
            <p class="mb-4 text-dark-600 dark:text-dark-300">{item.content}</p>
            
            <div class="mb-4">
              <img 
                src={item.image} 
                alt={item.title} 
                class="rounded-lg w-full h-48 object-cover"
                loading="lazy"
              />
            </div>
            
            <ul class={`text-sm space-y-1 text-dark-600 dark:text-dark-300 ${index % 2 === 0 ? 'md:text-right' : ''}`}>
              {item.items.map(listItem => (
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 rounded-full bg-primary-500 flex-shrink-0"></span>
                  <span>{listItem}</span>
                </li>
              ))}
            </ul>
            
            <div class="mt-4">
              <a href={`/timeline/${item.id}`} class="btn btn-outline py-2 px-4 text-sm rounded-md">
                Learn More
              </a>
              
              <!-- Social sharing -->
              <div class={`mt-4 flex gap-2 ${index % 2 === 0 ? 'md:justify-end' : ''}`}>
                <button class="p-2 text-dark-400 hover:text-primary-500 dark:text-dark-400 dark:hover:text-primary-400 bg-gray-100 dark:bg-dark-700 rounded" aria-label="Share on Facebook">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
                  </svg>
                </button>
                <button class="p-2 text-dark-400 hover:text-primary-500 dark:text-dark-400 dark:hover:text-primary-400 bg-gray-100 dark:bg-dark-700 rounded" aria-label="Share on Twitter">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
                  </svg>
                </button>
                <button class="p-2 text-dark-400 hover:text-primary-500 dark:text-dark-400 dark:hover:text-primary-400 bg-gray-100 dark:bg-dark-700 rounded" aria-label="Share via Email">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Timeline progress indicators -->
    <div class="timeline-progress">
      {timelineItems.map((item, index) => (
        <a 
          href={`#${item.id}`} 
          class="timeline-progress-dot" 
          aria-label={`Go to ${item.title}`}
          title={item.title}
        ></a>
      ))}
    </div>
  </div>
</section>