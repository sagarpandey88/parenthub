<section class="relative bg-gradient-to-b from-primary-100 to-white dark:from-dark-800 dark:to-dark-900 pt-24 pb-12 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <div class="md:w-1/2 space-y-6">
        <h1 class="text-4xl md:text-5xl font-bold text-dark-900 dark:text-white leading-tight">
          Your Complete Guide to <span class="text-primary-600 dark:text-primary-400">Parenting</span> Journey
        </h1>
        <p class="text-lg md:text-xl text-dark-700 dark:text-dark-200">
          Navigate every stage of your parenting adventure with expert guidance, from planning a family to your child's first big milestones.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/timeline" class="btn btn-primary py-3 px-6 rounded-lg text-center">
            Explore Timeline
          </a>
          <a href="/articles" class="btn btn-outline py-3 px-6 rounded-lg text-center">
            Read Articles
          </a>
        </div>
      </div>
      <div class="md:w-1/2 relative">
        <img 
          src="https://images.pexels.com/photos/3933246/pexels-photo-3933246.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
          alt="Happy family with a baby" 
          class="rounded-xl shadow-xl w-full max-w-lg mx-auto"
          width="800"
          height="600"
        />
        <div class="absolute -bottom-4 -right-4 md:-bottom-8 md:-right-8 bg-white dark:bg-dark-800 p-4 rounded-lg shadow-lg transform rotate-3 w-32 md:w-40 border-2 border-primary-200 dark:border-primary-900">
          <p class="text-sm md:text-base font-medium text-primary-600 dark:text-primary-400 text-center">
            Join 50,000+ parents
          </p>
        </div>
      </div>
    </div>
    
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
      <div class="bg-white dark:bg-dark-800 p-4 rounded-lg shadow-md">
        <span class="text-3xl mb-2 block">👶</span>
        <h3 class="font-semibold">Conception</h3>
      </div>
      <div class="bg-white dark:bg-dark-800 p-4 rounded-lg shadow-md">
        <span class="text-3xl mb-2 block">🤰</span>
        <h3 class="font-semibold">Pregnancy</h3>
      </div>
      <div class="bg-white dark:bg-dark-800 p-4 rounded-lg shadow-md">
        <span class="text-3xl mb-2 block">🏥</span>
        <h3 class="font-semibold">Delivery</h3>
      </div>
      <div class="bg-white dark:bg-dark-800 p-4 rounded-lg shadow-md">
        <span class="text-3xl mb-2 block">✈️</span>
        <h3 class="font-semibold">Adventures</h3>
      </div>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute top-1/4 right-0 w-64 h-64 bg-primary-200 dark:bg-primary-900/20 rounded-full blur-3xl opacity-50 -z-10"></div>
  <div class="absolute bottom-0 left-10 w-48 h-48 bg-secondary-200 dark:bg-secondary-900/20 rounded-full blur-3xl opacity-50 -z-10"></div>
</section>